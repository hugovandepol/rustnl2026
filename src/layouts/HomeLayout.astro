---
import Head from "../components/page/head.astro";
import Header from "../components/page/header.astro";
import Footer from "../components/page/footer.astro";
import Hero from "../components/page/Hero.astro";

import ButtonGroup from "../components/ButtonGroup.astro";
import Button from "../components/Button.astro";

import MainSchedule from "../components/schedule/MainSchedule.astro";

import Sponsors from "../components/sponsor/Sponsors.astro";

import Location from "../components/Location.astro";

import "../styles/index.scss";
---

<!doctype html>
<html lang="en">
    <style lang="scss">
        @import "../styles/variables.scss";

        .down-arrow {
            aspect-ratio: 1;
            border: solid $color-red-400;
            border-width: 0 1rem 1rem 0;
            display: inline-block;
            rotate: 0deg;
            animation: MoveUpDown 2s ease-in-out infinite;
            rotate: 45deg;
            width: 3rem;
        }

        @keyframes MoveUpDown {
            0%,
            100% {
                translate: 0 0;
            }
            50% {
                translate: 0 0.4em;
            }
        }

        .explainer,
        .cfp,
        .where,
        .about {
            font-size: $font-size-lg;
        }

        .header {
            font-size: $font-size-2xl;
            text-align: center;
        }

        .leftheader {
            font-size: $font-size-2xl;
        }

        #schedule {
            margin-block-start: 2rem;
        }
    </style>

    <Head title="RustWeek 2025" />
    <body>
        <Header />
        <div class="space-y-24">
            <Hero style="home">
                <img
                    src="/svg/hero-logo-rustweek-by-rustnl.svg"
                    alt="RustWeek 2025"
                />
                <p>May 13â€“17, 2025<br /> Utrecht, The Netherlands</p>

                <ButtonGroup>
                    <Button
                        link="https://www.eventbrite.nl/e/rust-week-2025-tickets-1001676961757?aff=oddtdtcreator"
                        >Tickets</Button
                    >
                </ButtonGroup>

                <a class="down-arrow" href="#explainer"></a>
            </Hero>
            <section class="container md:grid md:cols-12">
                <div
                    class="explainer md:col-start-3 md:col-end-11 xl:col-start-4 xl:col-end-10"
                >
                    <slot name="explainer" />
                </div>
            </section>
            <section class="container" id="schedule">
                <MainSchedule />
            </section>

            <section class="container space-y-6">
                <h2 class="header">Speakers</h2>
                <div class="grid md:cols-2 xl:cols-4" id="speakers">
                    <slot name="speakers" />
                </div>
            </section>
            <section class="container md:grid md:cols-12">
                <div
                    class="cfp md:col-start-3 md:col-end-11 xl:col-start-4 xl:col-end-10"
                >
                    <slot name="cfp" />
                </div>
            </section>
            <ButtonGroup>
                <Button link="/speakers"
                    >All speakers</Button
                >
            </ButtonGroup>

            <Location />

            <section class="container md:grid md:cols-12" id="where">
                <div
                    class="where md:col-start-3 md:col-end-11 xl:col-start-4 xl:col-end-10"
                >
                    <slot name="where" />
                </div>
            </section>

            <section class="container" id="sponsors">
                <Sponsors>
                    <h2 class="header">Sponsors</h2>
                    <slot name="sponsors" />
                </Sponsors>
            </section>
            <section class="container" id="previous-sponsors">
                <Sponsors>
                    <h2 class="header">Last Year's Sponsors</h2>
                    <slot name="previous-sponsors" />
                </Sponsors>
            </section>
            <section class="container md:grid md:cols-12">
                <div
                    class="about md:col-start-3 md:col-end-11 xl:col-start-4 xl:col-end-10"
                >
                    <h2 id="about" class="leftheader">About RustWeek</h2>

                    <slot name="about" id="about" />
                </div>
            </section>
        </div>
        <Footer />
    </body>
</html>
