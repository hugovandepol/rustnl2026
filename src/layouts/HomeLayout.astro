---
import Head from "../components/head.astro";
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";

import "../styles/index.scss";
---

<!doctype html>
<html lang="en">
    <Head title="RustWeek 2025" />
    <body>
        <Header />
        <div class="space-y-24">
            <section class="hero">
                <img
                    src="/svg/hero-logo-rustweek-by-rustnl.svg"
                    alt="Logo RustWeek 2025"
                />
                <p>May 13 - 17, 2025<br /> Utrecht, The Netherlands</p>
                <div class="button-group">
                    <a href="#updates" class="button button-primary"
                        >Get updates</a
                    >
                </div>
                <a class="down-arrow" href="#explainer"></a>
            </section>
            <section class="container md:grid md:cols-12">
                <div
                    class="text-lg md:col-start-3 md:col-end-11 xl:col-start-4 xl:col-end-10"
                >
                    <slot name="explainer" />
                </div>
            </section>
            <section class="container">
                <div class="location">
                    <div class="image"></div>
                    <div class="image"></div>
                    <div class="image">
                        <div class="ferris"></div>
                        <div class="ferris-arms"></div>
                    </div>
                    <div class="ferris">
                        <img src="/images/ferris.png" alt="" />
                    </div>
                </div>
            </section>

