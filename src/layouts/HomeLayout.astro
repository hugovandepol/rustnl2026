---
import Head from "../components/page/head.astro";
import Header from "../components/page/header.astro";
import Footer from "../components/page/footer.astro";
import Hero from "../components/page/Hero.astro";
import "../styles/index.scss";
---

<!doctype html>
<html lang="en">
    <style lang="scss">
        @use "../styles/variables.scss";

        .down-arrow {
            aspect-ratio: 1;
            border: solid variables.$color-red-400;
            border-width: 0 1rem 1rem 0;
            display: inline-block;
            rotate: 0deg;
            animation: MoveUpDown 2s ease-in-out infinite;
            rotate: 45deg;
            width: 3rem;
        }

        @keyframes MoveUpDown {
            0%,
            100% {
                translate: 0 0;
            }
            50% {
                translate: 0 0.4em;
            }
        }

        .leftheader {
            font-size: variables.$font-size-2xl;
        }

        #schedule {
            margin-block-start: 2rem;
        }

        .details-button {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 1em;
        }
    </style>

    <Head title="RustWeek 2026" />
    <body>
        <Header />
        <div class="space-y-16 lg:space-y-24">
            <Hero style="home" />
            <section class="container md:grid md:cols-12">
                <div class="explainer md:col-start-3 md:col-end-11 xl:col-start-4 xl:col-end-10">
                    <slot name="explainer" />
                </div>
            </section> 
            <slot />
            <section class="container md:grid md:cols-12">
                <div class="about md:col-start-3 md:col-end-11 xl:col-start-4 xl:col-end-10">
                    <slot name="about" id="about" />
                </div>
            </section>
        </div>
        <Footer />
    </body>
</html>
