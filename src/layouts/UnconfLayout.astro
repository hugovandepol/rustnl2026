---
import Head from "../components/head.astro";
import Footer from "../components/footer.astro";
import "../styles/index.scss";
---

<!doctype html>
<html lang="en">
  <Head />

  <body>
    <section class="hero page">
      <div class="nav">
        <img src="/images/logo.svg" alt="Logo RustNL 2024" />
        <div class="button-group">
          <a href="/" class="button button-primary">Home</a>
        </div>
      </div>
      <h1 class="text-3xl">RustNL unconference</h1>
    </section>
    <section class="container md:grid md:cols-12 py-12">
      <div
        class="text-lg md:col-start-3 md:col-end-11 xl:col-start-4 xl:col-end-10"
      >
        <slot name="unconf" />
      </div>
    </section>
    <section class="container sponsors" id="sponsors">
      <h3 class="text-2xl text-center">Unconference sponsors</h3>
      
      <div class="sponsors-tiers space-y-6">
        <h3 class="text-lg">Ecosystem partner</h3>
        <div class="sponsors-row">
          <div
            class="sponsor"
            style="--image: url(/images/sponsors/rustfoundation.png);"
          >
          </div>
          <div
            class="sponsor"
            style="--image: url(/images/sponsors/futurewei.png);"
          >
          </div>
        </div>
      </div>
      <div class="sponsors-tiers space-y-6">
        <h3 class="text-lg">Ecosystem supporters</h3>
        <div class="sponsors-row">
          <div
            class="sponsor nl-sponsor"
            style="--image: url(/images/sponsors/infineon.png);"
          >
          </div>
        </div>
      </div>
      <div class="sponsors-tiers space-y-6">
        <h3 class="text-lg">Organizing partners</h3>
        <div class="sponsors-row">
          <div
            class="sponsor"
            style="--image: url(/images/sponsors/unconf/embedded-wg.png);"
          >
          </div>
          <div
            class="sponsor"
            style="--image: url(/images/sponsors/unconf/robius.png);"
          >
          </div>
        </div>
      </div>
    </section>

    <Footer />
  </body>
</html>
