---
import CommonLayout from "./CommonLayout.astro";
import OneColumnText from "../components/OneColumnText.astro";
import Button from "../components/Button.astro";
import Divider from "../components/Divider.astro";
import "../styles/index.scss";

import UnconfSponsors from "../components/unconf/UnconfSponsors.astro";
import UnconfLeaders from "../components/unconf/UnconfLeaders.astro";

const { frontmatter } = Astro.props;
const { title } = frontmatter;
---

<CommonLayout title={title} header={title} withLogo>
    <OneColumnText>
        <slot />
    </OneColumnText>
    <div class="py-12">
        <Button link="/unconf">Guide for participants</Button>
    </div>
    <OneColumnText class="space-y-12">
        <Divider />
    </OneColumnText>
    <UnconfSponsors />
    <OneColumnText class="space-y-12">
        <Divider />
    </OneColumnText>
    <UnconfLeaders />
    <div class="py-12">
        <Button link="/unconf">Guide for participants</Button>
    </div>
</CommonLayout>
