---
import Head from "../components/head.astro";
import Footer from "../components/footer.astro";
import Header from "../components/header.astro";
import "../styles/index.scss";
---

<!doctype html>
<html lang="en">
  <Head title="Schedule - RustWeek 2025" />

  <body>
    <Header withLogo />
    <section class="hero page">
      <h1 class="text-3xl">Schedule</h1>
    </section>
    <section class="container py-24 space-y-12" id="schedule">
      <slot name="above" />

      <div class="space-y-12 md:grid md:cols-2 md:space-y-0">
        <div class="space-y-6 px-3 sm:px-6 md:space-y-12 xl:px-12">
          <h3 class="text-2xl">Schedule <strong>day 1 (May 7th)</strong></h3>
          <slot name="timetable-day1" />
        </div>
        <div class="space-y-6 px-3 sm:px-6 md:space-y-12 xl:px-12">
          <h3 class="text-2xl">Schedule <strong>day 2 (May 8th)</strong></h3>
          <slot name="timetable-day2" />
        </div>
      </div>
      <div style="text-align: center;">
        Times and locations of workshops can be found on the <a
          href="/workshops">workshops</a
        > page.
      </div>
      <div class="button-group button-group-center">
        <a class="button button-primary" href="/speakers">Our Speakers</a>
        <a class="button button-primary" href="/workshops">Workshop Schedule</a>
        <a class="button button-primary" href="/">Back Home</a>
      </div>
    </section>

    <Footer />
  </body>
</html>
