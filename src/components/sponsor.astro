---
const { name, tier, link, image } = Astro.props;

let className = "size-md";
switch (tier) {
    case "headline":
        className = "size-xl";
        break;
    case "gold":
        className = "size-l";
        break;
    case "silver":
    case "organizing-partner":
    case "ecosystem-partner":
        className = "size-md";
        break;
    case "nl-sponsor":
    case "workshop-partner":
        className = "size-s";
        break;
    case "nl-supporter":
    case "ecosystem-supporter":
        className = "size-xs";
        break;
    default:
        className = "size-md";
        break;
}
---

{
    image && (
        <div
            title={name}
            onclick={`window.open('${link}', '_blank', 'noopener, noreferrer')`}
            class={`sponsor ${className}`}
            style={`--image: url(/images/sponsors/${image}`}
        />
    )
}
{
    !image && (
        <div
            title={name}
            onclick={`window.open('${link}', '_blank', 'noopener, noreferrer')`}
            class={`sponsor ${className}`}
            style="display: flex; flex-direction: column; justify-content: center; border: none; font-size: large;"
        >
            <h1>{name}</h1>
        </div>
    )
}
