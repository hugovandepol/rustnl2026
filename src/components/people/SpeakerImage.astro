---
interface Props {
    src: string;
    alt: string;
}

const { src, alt }: Props = Astro.props;
---

<img src={src} alt={alt} />

<style lang="scss">
    @import "../../styles/variables.scss";

    img {
        align-self: center;
        border-radius: 100%;
        height: auto;
        max-width: 192px;
        vertical-align: middle;
        width: 100%;
        border: 1px solid #1e1e24;
    }
</style>
