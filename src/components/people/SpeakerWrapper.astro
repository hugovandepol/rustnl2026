<style lang="scss">
    @import "../../styles/breakpoint.scss";
    @import "../../styles/variables.scss";

    .speaker {
        align-items: center;
        background-color: $color-yellow-400;
        border: 1px solid $color-yellow-500;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        padding: space(6);
        position: relative;
        text-align: center;
        z-index: 0;

        &::after {
            background-color: $color-yellow-500;
            clip-path: polygon(0 0, 0% 100%, 100% 0);
            content: "";
            inset: 0;
            position: absolute;
            z-index: -1;
            opacity: 0.5;
        }

        &:nth-child(odd)::after {
            clip-path: polygon(100% 100%, 0 0, 0 100%);
        }

        > * + * {
            margin-block-start: space(6);
        }

        img {
            align-self: center;
            border-radius: 100%;
            height: auto;
            max-width: 192px;
            vertical-align: middle;
            width: 100%;
        }

        a {
            color: inherit;
            text-decoration: underline;
            display: inline-block;
        }

        .socials {
            display: flex;
            gap: 12px;
        }

        .speaker-detail {
            text-align: left;
        }
    }
</style>
