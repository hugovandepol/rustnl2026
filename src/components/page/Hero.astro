---
interface Props {
    style?: "page" | "home";
}

const { style = "page" }: Props = Astro.props;
---

<section class:list={["hero", style]}>
    <slot />
</section>

<style lang="scss" is:global>
    @use "../../styles/breakpoint.scss";
    @use "../../styles/variables.scss";

    .hero {
        align-items: center;

        background: variables.$color-yellow-400;
        box-sizing: border-box;
        color: white;
        display: flex;
        flex-direction: column;
        font-size: variables.$font-size-lg;

        font-weight: 600;

        // background:
        // linear-gradient(rgb(0 0 0 / 50%), rgb(255 255 255 / 30%), rgb(0 0 0 / 50%)),
        // no-repeat right 30% / cover url("images/backgrounds/background.jpg");
        // no-repeat right 30% / cover url("images/backgrounds/background-conf-stage.webp");
        // no-repeat right 30% / cover url("images/backgrounds/background-conf-stage-opening.jpeg");
        // no-repeat right 30% / cover url("images/backgrounds/background-conf-stage-side.jpg");

        gap: variables.space(10);
        justify-content: center;
        line-height: variables.$line-height-tight;
        min-height: 100svh;
        padding-block: variables.space(12);
        padding-inline: variables.space(6);
        position: relative;
        text-align: center;
        z-index: 0;
        margin-block-end: 2rem;

        @include breakpoint.wider_than(sm) {
            font-size: variables.$font-size-xl;
        }

        @include breakpoint.wider_than(md) {
            border-width: variables.space(6) variables.space(6) 0 variables.space(6);
            padding-block: variables.space(12);
            padding-inline: variables.space(6);
        }

        @include breakpoint.wider_than(xl) {
            border-width: variables.space(12) variables.space(12) 0 variables.space(12);
            padding-block: variables.space(24);
            padding-inline: variables.space(12);
        }

        &::before {
            background: variables.$color-yellow-500;
            clip-path: polygon(0 0, 100% 0, 100% 100%);
            content: "";
            inset: 0;
            position: absolute;
            z-index: -1;
        }

        &::after {
            background-image: url("/images/stripes.svg");
            background-position: center center;
            background-repeat: no-repeat;
            background-size: 100% auto;
            bottom: 0;
            content: "";
            height: variables.space(6);
            max-width: 44.25rem;
            position: absolute;
            width: 100%;
        }

        svg {
            height: auto;
            max-width: 95vw;

            @include breakpoint.wider_than(md) {
                max-width: 60vw;
            }

            @include breakpoint.wider_than(xl) {
                max-width: 40vw;
            }
        }

        .nav {
            display: flex;
            justify-content: spacebetween;
            flex: 1;
            width: 100%;
            align-items: center;
        }

        &.page {
            min-height: 8rem;

            img {
                max-height: 3rem;
            }
        }
    }
</style>
