---
interface Props {
    title: string;
    ogImage?: string;
}

const { title, ogImage = "https://2026.rustweek.org/images/rustweek2026-header-image-v2.png" } = Astro.props;
---

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta
        name="description"
        content="RustWeek 2026, The Netherlands - May 18 - 23 2026"
    />
    <link rel="icon" href="/svg/rustnl-logo-square.svg" type="image/svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
        href="https://fonts.googleapis.com/css2?family=Alfa+Slab+One&display=swap"
        rel="stylesheet"
    />
    <slot />
    <meta property="og:url" content="https://rustweek.org/" />
    <meta property="og:title" content={title} />
    <meta
        property="og:description"
        content="RustWeek 2026, The Netherlands - May 18 - 23 2026"
    />
    <meta
        property="og:image"
        content={ogImage}
    />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
        href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@300;400;500;700&display=swap"
        rel="stylesheet"
    />

