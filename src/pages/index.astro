---
import HomeLayout from "../layouts/HomeLayout.astro";

// import Person from "../components/people/Person.astro";
// import Sponsor from "../components/sponsor/sponsor.astro";
// import SponsorTier from "../components/sponsor/sponsor-tier.astro";

import Button from "../components/Button.astro";
import ButtonGroup from "../components/ButtonGroup.astro";
import Image from "../components/Image.astro";
import Person from "src/components/people/Person.astro";
import PeopleList from "src/components/people/PeopleList.astro";
import Location from "src/components/Location.astro";
import MainSchedule from "src/components/schedule/MainSchedule.astro";
import Sponsors from "src/components/sponsor/Sponsors.astro";
import SponsorTier from "src/components/sponsor/sponsor-tier.astro";
import Sponsor from "src/components/sponsor/sponsor.astro";
import { useTalks } from "../components/useTalks";

const talks = await Astro.glob("./talks/*.md");
const { alice, julius, pietro, alex, niko, miguel, ciara, raph } =
  useTalks(talks);
const featured_talks = [alice, julius, pietro, alex, niko, miguel, ciara, raph];

const people = Array.from({ length: 9 }, (_, i) => i + 1);
---

<HomeLayout>
  <div slot="explainer" class="markdown">
    <h2 id="explainer">RustWeek 2026</h2>
    <p>
      The world's biggest Rust conference returns to beautiful Utrecht and
      welcomes 800+ community members, professionals and the maintainers of
      Rust.
    </p>
    <p style="margin-block-end: 0;">
      The week includes one day of workshops, two days of talks, a hackathon,
      and social activities. Additionally, we're hosting an unconference, and
      our second Rust Project All Hands!
    </p>
  </div>
  <MainSchedule />
  <PeopleList title="Last year's speakers" lead="">
    {
      featured_talks.map((talk) => (
        // <Person smalltile link={talk.slug} tracks={talk.tracks} {...talk.speakers[0]} />
        <Person smalltile {...talk.speakers[0]} />
      ))
    }
  </PeopleList>
  <Image
    src="/images/slider/4.jpg"
    alt="10 year celebration at RustWeek 2026 "
  />
  <Location />

  <div class="container">
    <Sponsors>
      <div slot="header">
        <h2>Last year's sponsors</h2>
        <p>
          Interested in sponsoring? Download our <a
            target="_blank"
            href="/resources/sponsorship-prospectus-rustweek-2026.pdf"
            >Sponsorship prospectus</a
          > or <a href="mailto:sponsors@rustnl.org">contact us</a>
        </p>
      </div>
      <SponsorTier name="Diamond sponsors">
        <Sponsor
          name="JetBrains"
          tier="diamond"
          image="jetbrains.png"
          link="https://www.jetbrains.com/"
        />
        <Sponsor
          name="AWS"
          tier="diamond"
          image="aws.png"
          link="https://aws.amazon.com/"
        />
        <Sponsor
          name="Huawei"
          tier="diamond"
          image="huawei.png"
          link="https://www.huawei.com/"
        />
      </SponsorTier>
      <SponsorTier name="Gold sponsors">
        <Sponsor
          name="Zed"
          tier="gold"
          image="zed.svg"
          link="https://zed.dev/"
        />
      </SponsorTier>
      <SponsorTier name="Ecosystem partners">
        <Sponsor
          name="GOSIM Rust Spotlight"
          tier="ecosystem-partner"
          image="gosim.svg"
          link="https://spotlight.gosim.org/rust2025"
        />
        <Sponsor
          name="Google"
          tier="ecosystem-partner"
          image="google.png"
          link="https://google.com/"
        />
        <Sponsor
          name="Rust Foundation"
          tier="ecosystem-partner"
          image="rustfoundation.png"
          link="https://foundation.rust-lang.org/"
        />
        <Sponsor
          name="Futurewei"
          tier="ecosystem-partner"
          image="futurewei.png"
          link="https://futurewei.com/"
        />
      </SponsorTier>
      <SponsorTier name="Silver sponsors">
        <Sponsor
          name="Arm"
          tier="silver"
          image="arm.svg"
          link="https://www.arm.com/"
        />
        <Sponsor
          name="Infineon"
          tier="silver"
          image="infineon.png"
          link="https://www.infineon.com/"
        />
      </SponsorTier>
      <SponsorTier name="Bronze sponsors">
        <Sponsor
          name="Espressif"
          tier="bronze"
          image="unconf/espressif.svg"
          link="https://espressif.com/"
        />
        <Sponsor
          name="Flox"
          tier="bronze"
          image="flox.svg"
          link="https://flox.dev/"
        />
        <Sponsor
          name="Aleph Alpha"
          tier="bronze"
          image="aleph-alpha.svg"
          link="https://aleph-alpha.com/"
        />
        <Sponsor
          name="TandemDrive"
          tier="bronze"
          image="tandemdrive.png"
          link="https://tandemdrive.com/"
        />
      </SponsorTier>
    </Sponsors>
  </div>
  <div slot="about" class="space-y-12">
    <div>
      <h2 id="about">About RustWeek</h2>
      <p>
        RustWeek is organised by Stichting Rust Nederland, RustNL for short, a
        non-profit that strives to promote the implementation of the Rust
        programming language.
      </p>
    </div>
    <ButtonGroup>
      <Button link="/about">More About Us</Button>
    </ButtonGroup>
  </div>
</HomeLayout>
