const people = Array.from({ length: 9 }, (_, i) => i + 1);
---

<HomeLayout>
    
    <div slot="explainer">
        <h2 id="explainer">RustWeek 2026</h2    >
        <p>
            Rust Week will be back in 2026! Block your calendars now from the 18nd of may to the 22nd!
        </p>
    </div>

    <div slot="about" class="space-y-12">
        <div>
            <h2 id="about">About RustWeek</h2>
            <p>
                RustWeek is organised by Stichting Rust Nederland, RustNL for short,
                a non-profit that strives to promote the implementation of the Rust
                programming language.
            </p>
        </div>
        <ButtonGroup>
            <Button link="/about">More About Us</Button>
        </ButtonGroup>
    </div>
    <Image src="https://images.pexels.com/photos/1563356/pexels-photo-1563356.jpeg" alt="RustWeek 2026 Banner" />
    <PeopleOverview title="volunteers" lead=" RustWeek would not be possible without the incredible help from our volunteers before and during the event. ">
        {people.map(person => <Person />)}
    </PeopleOverview>
</HomeLayout>
